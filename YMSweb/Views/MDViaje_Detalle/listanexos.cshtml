@{
    ViewData["Title"] = "Lista Estacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var message = ViewBag.SuccessMsg;
}

<head>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" />
</head>
<br />
<!--Validacion para desplegar Mensaje despues del POST-->
@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Mensaje: </strong> @Html.Encode(TempData["success"])
        <a href="#" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </a>
    </div>
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="div-title">
                <h4>ANEXOS - TRANSPORTES</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="container-fluid">
                <table table id="tblanexos" class="table table-striped table-bordered" style="width: 100%">
                    <thead>
                        <tr>
                            <th class="d-none">
                                Codigo
                            </th>
                            <th>
                                Anexo
                            </th>
                            <th>
                                Placa
                            </th>
                            <th>
                                Activo
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.anexos)
                        {
                            <tr>
                                <td class="d-none">
                                    @item.id_anexo
                                </td>
                                <td>
                                    @item.anex_desc
                                </td>
                                <td>
                                    @item.esta_plac
                                </td>
                                <td>
                                    <form asp-controller="MDViaje_Detalle" asp-action="Updateanexos" method="post">
                                        <input type="hidden" name="mplac_desc" value="@ViewData["mplac_desc"]">
                                        <input type="hidden" name="id_anexo" value="@item.id_anexo">
                                        <input type="hidden" name="id_vijcab" value="@ViewData["id_vijcab"]">
                                        <input type="hidden" name="nro_trans" value="@ViewData["nro_trans"]">
                                        @if (item.anex_act)
                                        {

                                            <input type="submit" class="btn-sm btn-danger text-light" value="Ocupada" />
                                        }
                                        else
                                        {
                                            <input type="submit" class="btn-sm btn-success text-light" value="Libre" />
                                        }
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="container-fluid">
            <a class='btn btn-info btn-sm text-white' asp-action="Validar" asp-controller="MDViaje_Detalle" asp-route-id="@ViewData["id_vijcab"]">Regresar</a>
        </div>
    </div>
</div>
<br />
<br />

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblanexos').DataTable({
                "pageLength": 50,
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros por pagina",
                    "zeroRecords": "No se encontraron registros",
                    "info": "Mostrar pagina _PAGE_ de _PAGES_",
                    "infoEmpty": "No se encontraron registros",
                    "infoFiltered": "(filtrado de _MAX_ registros totales)",
                    "search": "Buscar:",
                    "paginate": {
                        "next": "siguiente",
                        "previous": "Anterior"
                    }

                }
            });
        });
    </script>
}