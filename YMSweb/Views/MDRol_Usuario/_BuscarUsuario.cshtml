@model YMSweb.Data.Entities.MDUsuario

<!-- Modal Usuario-->
<div class="modal fade" id="modlUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="usuario">Buscar Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <h1>Lista de Usuarios</h1>
                    <table id="tbluser" class="table table-striped table-bordered" style="width: 100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Usua_user)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Usua_nombres)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Usua_apellidos)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Usua_email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Usua_pass)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Usua_act)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Usuario)
                            {
                                <tr>
                                    <td>
                                        @item.Usua_user
                                    </td>
                                    <td>
                                        @item.Usua_nombres
                                    </td>
                                    <td>
                                        @item.Usua_apellidos
                                    </td>
                                    <td>
                                        @item.Usua_email
                                    </td>
                                    <td>
                                        @item.Usua_pass
                                    </td>
                                    <td>
                                        @item.Usua_act
                                    </td>
                                    <td>
                                        <a class='btn btn-info btn-sm text-white' asp-action="Edit" asp-route-id="@item.IdUsuario">Elegir</a> |                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
