@model IEnumerable<YMSweb.Data.Entities.MDCuadrilla>

@{
    ViewData["Title"] = "Cuadrilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" />

</head>
<br />
@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Mensaje: </strong> @Html.Encode(TempData["success"])
        <a href="#" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </a>
    </div>
}
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="div-title">
                <h4 class="m-0">CUADRILLAS</h4>
            </div>
            <p>
                <a asp-action="Create" class='btn btn-info btn-sm text-white'>Nueva cuadrilla</a>
            </p>
        </div>
        <div class="card-body">
            <table id="tblcuar" class="table table-striped table-bordered" style="width: 100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.cua_desc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cua_cod)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cua_act)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cua_libre)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.cua_desc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cua_cod)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cua_act)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cua_libre)
                        </td>
                        <td>
                            <a class='btn btn-info btn-sm text-white' asp-action="Edit" asp-route-id="@item.id_cuadrilla">Editar</a> |
                            <a class='btn btn-danger btn-sm text-white' asp-action="Delete" asp-route-id="@item.id_cuadrilla">Eliminar</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
<br />
<br />
<br />
@section Scripts {
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblcuar').DataTable({
                "pageLength": 50,
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros por pagina",
                    "zeroRecords": "No se encontraron registros",
                    "info": "Mostrar pagina _PAGE_ de _PAGES_",
                    "infoEmpty": "No se encontraron registros",
                    "infoFiltered": "(filtrado de _MAX_ registros totales)",
                    "search": "Buscar:",
                    "paginate": {
                        "next": "siguiente",
                        "previous": "Anterior"
                    }

                }
            });
        });
    </script>
}