@model YMSweb.Data.Entities.MDUsuario

<div class="row">
    <input type="hidden" asp-for="IdUsuario" />
    <div class="form-group col">
        <label asp-for="Usua_user" class="control-label"></label>
        <input asp-for="Usua_user" placeholder="Escribe tu usuario" class="form-control" />
        <span asp-validation-for="Usua_user" class="text-danger"></span>
    </div>
    <div class="form-group col">
        <label asp-for="Usua_nombres" class="control-label"></label>
        <input asp-for="Usua_nombres" placeholder="Escribe tu nombre" class="form-control" />
        <span asp-validation-for="Usua_nombres" class="text-danger"></span>
    </div>
    <div class="form-group col">
        <label asp-for="Usua_apellidos" class="control-label"></label>
        <input asp-for="Usua_apellidos" placeholder="Escribe tu apellido" class="form-control" />
        <span asp-validation-for="Usua_apellidos" class="text-danger"></span>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="form-group col">
        <label asp-for="Usua_email" class="control-label"></label>
        <input asp-for="Usua_email" placeholder="Escribe tu email" class="form-control" />
        <span asp-validation-for="Usua_email" class="text-danger"></span>
    </div>
    <div class="form-group col">
        <label asp-for="Usua_pass" class="control-label"></label>
        <input asp-for="Usua_pass" placeholder="Escribe tu password" class="form-control" />
        <span asp-validation-for="Usua_pass" class="text-danger"></span>
    </div>
    <div class="form-group col">
        <label>Activo</label><br />
        <input class="checkbox" asp-for="Usua_act" id="Usua_act" checked />
    </div>
</div>
