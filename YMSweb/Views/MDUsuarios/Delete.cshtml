@model YMSweb.Data.Entities.MDUsuario

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<!--Validacion para desplegar Mensaje despues del POST-->
<h3>¿Esta seguro de eliminar este usuario?</h3>
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="div-title">
                <h4 class="m-0">ELIMINAR USUARIOS</h4>
            </div>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Usua_user)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Usua_user)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Usua_nombres)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Usua_nombres)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Usua_apellidos)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Usua_apellidos)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Usua_email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Usua_email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Usua_pass)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Usua_pass)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Usua_act)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Usua_act)
                </dd>
            </dl>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdUsuario" />
        <input type="submit" value="Eliminar" class='btn btn-danger btn-sm text-white' /> |
        <a asp-action="Index" class='btn btn-info btn-sm text-white'>Regresar</a>
    </form>
</div>
