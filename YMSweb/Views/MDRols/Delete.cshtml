@model YMSweb.Data.Entities.MDRol

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Mensaje: </strong> @Html.Encode(TempData["success"])
        <a href="#" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </a>
    </div>
}
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="div-title">
                <h4 class="m-0">ELIMINAR ROL</h4>
            </div>
            <br />
            <h3>¿Esta seguro de eliminar este registro?</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.rol_desc)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.rol_desc)
                </dd>
            </dl>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Idrol" />
            <input type="submit" value="Eliminar" class='btn btn-danger btn-sm text-white' /> |
            <a asp-action="Index" class='btn btn-info btn-sm text-white'>Regresar</a>
        </form>
    </div>
</div>
