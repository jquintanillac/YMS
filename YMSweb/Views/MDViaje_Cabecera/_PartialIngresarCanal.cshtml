   <!--Modal recalada-->
<div class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1" id="canal" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            @*Modal Header*@
            <div class="modal-header">
                <div class="card-header">
                    <div class="div-title">
                        <h4>CANALES - TRANSPORTES</h4>
                    </div>
                </div>
                <button type="button" class="btn close2" data-dismiss="modal">&times;</button>
            </div>
            @* Modal body*@
            <div class="modal-body">
                <div class="container">
                    <table id="tblcanal" class="table table-striped table-bordered" style="width: 100%">
                        <thead>
                            <tr>
                                <th class="d-none">
                                    Codigo
                                </th>
                                <th>
                                    Canal
                                </th>
                                <th>
                                    Nro. Transporte
                                </th>
                                <th>
                                    Activo
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Canales)
                            {
                                <tr>
                                    <td class="d-none canalid">
                                        @item.id_canal
                                    </td>
                                    <td>
                                        @item.can_desc
                                    </td>
                                    <td>
                                        @item.can_plac
                                    </td>
                                    <td>
                                        <form method="post">
                                            <input type="hidden" class="placa" name="mplac_desc">
                                            <input type="hidden" class="idcanal" name="id_canal" id="id_canal" value="@item.id_canal">                                            
                                            <input type="hidden" class="vijcab" name="id_vijcab">
                                            <input type="hidden" class="nrotrans" id="nro_trans" name="nro_trans">
                                            @if (item.can_act)
                                            {                                                
                                                <input type="submit" class="btn-sm btn-success text-light btnpostback" value="Agregar" />
                                                <input type="submit" class="btn-sm btn-danger text-light btnlib" value="Liberar" />
                                            }
                                            else
                                            {
                                                <input type="submit" class="btn-sm btn-success text-light btnpostback" value="Libre" />
                                            }
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            @* Modal footer*@
        <div class="modal-footer">
            <button type="button" class="btn btn-info close2" data-dismiss="modal">Cerrar</button>
        </div>
        </div>
    </div>
</div>


