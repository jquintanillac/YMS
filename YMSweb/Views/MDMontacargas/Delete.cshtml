@model YMSweb.Data.Entities.MDMontacargas
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<!--Validacion para desplegar Mensaje despues del POST-->
@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Mensaje: </strong> @Html.Encode(TempData["success"])
        <a href="#" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </a>
    </div>
}
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="div-title">
                <h4>ELIMINAR MONTACARGA</h4>
            </div>
            <br />
            <h3>¿Esta seguro de eliminar el registro?</h3>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.monta_desc)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.monta_desc)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.monta_act)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.monta_act)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="id_monta" />
            <input type="submit" value="Eliminar" class='btn btn-danger btn-sm text-white' /> |
            <a class='btn btn-info btn-sm text-white' asp-action="Index">Regresar</a>
        </form>
    </div>
</div>
