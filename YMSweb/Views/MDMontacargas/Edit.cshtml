@model YMSweb.Data.Entities.MDMontacargas
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<!--Validacion para desplegar Mensaje despues del POST-->
@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Mensaje: </strong> @Html.Encode(TempData["success"])
        <a href="#" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </a>
    </div>
}
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="div-title">
                <h4>EDITAR MONTACARGA</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id_monta" />
                    <div class="form-group">
                        <label asp-for="monta_desc" class="control-label"></label>
                        <input asp-for="monta_desc" class="form-control" />
                        <span asp-validation-for="monta_desc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="monta_cod" class="control-label"></label>
                        <input asp-for="monta_cod" class="form-control" />
                        <span asp-validation-for="monta_cod" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="checkbox">Activo</label><br />
                        <input type="checkbox" asp-for="monta_act" value="true">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class='btn btn-info btn-sm text-white' />
                        <a class='btn btn-info btn-sm text-white' asp-action="Index">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

