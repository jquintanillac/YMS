@model YMSweb.Data.Entities.MDChofer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Mensaje: </strong> @Html.Encode(TempData["success"])
        <a href="#" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </a>
    </div>
}
<hr />
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="div-title">
                <h4 class="m-0">CHOFER</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="chof_nomb" class="control-label"></label>
                            <input asp-for="chof_nomb" class="form-control" />
                            <span asp-validation-for="chof_nomb" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="chof_apell" class="control-label"></label>
                            <input asp-for="chof_apell" class="form-control" />
                            <span asp-validation-for="chof_apell" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="chof_dni" class="control-label"></label>
                            <input asp-for="chof_dni" class="form-control" />
                            <span asp-validation-for="chof_dni" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="chof_brevette" class="control-label"></label>
                            <input asp-for="chof_brevette" class="form-control" />
                            <span asp-validation-for="chof_brevette" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="checkbox">Activo</label><br />
                            <input type="checkbox" asp-for="chof_act" value="true">
                        </div>
                        <div class="form-group">
                            <input class='btn btn-info btn-sm text-white' type="submit" value="Guardar" />
                            <a class='btn btn-info btn-sm text-white' asp-action="Index">Regresar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
